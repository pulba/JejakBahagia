---
import Page from '../layouts/page.astro';
import '@fontsource/poppins';
import { Icon } from 'astro-iconify';
---

<Page title="Harga" desc="Ini halaman harga dari undangan jejak bahagia" subs="Banyak pilihan tea dengan harga yang tetap sama">
    <section>
      <div class="container px-6 mx-auto">
        <div class="max-w-screen-md mx-auto rounded-md font-poppins overflow-hidden bg-white p-6 relative flex flex-col justify-between items-center gap-4 border border-gray-400">
          <div>
              <p class="mt-2 text-blue-700 line-through">Rp. 150.000</p>
              <h4 class="text-4xl font-semibold flex text-gray-600"><sup class="text-base">Rp</sup>75.000</h4>
              <p class="text-gray-500">Masa Aktif 1 Tahun</p>
          </div>
          <div class="space-y-2 grid grid-cols-1 sm:grid-cols-2 gap-y-2 gap-x-8 *:flex *:gap-2">
              <div>
                <Icon name="mdi:success-circle-outline" class="w-5 h-5 text-blue-700" />
                  <span class="text-gray-700">Tamu Tanpa Batas</span>
              </div>
              <div>
                <Icon name="mdi:success-circle-outline" class="w-5 h-5 text-blue-700" />
                  <span class="text-gray-700">Gallery foto (max 8)</span>
              </div>
              <div>
                <Icon name="mdi:success-circle-outline" class="w-5 h-5 text-blue-700" />
                  <span class="text-gray-700">Dashboard undangan</span>
              </div>
              <div>
                <Icon name="mdi:success-circle-outline" class="w-5 h-5 text-blue-700" />
                  <span class="text-gray-700">Kirim undangan mudah</span>
              </div>
              <div>
                <Icon name="mdi:success-circle-outline" class="w-5 h-5 text-blue-700" />
                  <span class="text-gray-700">Bebas pilih Tema</span>
              </div>
              <div>
                <Icon name="mdi:success-circle-outline" class="w-5 h-5 text-blue-700" />
                  <span class="text-gray-700">Custom musik latar</span>
              </div>
              <div>
                <Icon name="mdi:success-circle-outline" class="w-5 h-5 text-blue-700" />
                  <span class="text-gray-700">Form RSVP & Ucapan
                  </span>
              </div>
              <div>
                <Icon name="mdi:success-circle-outline" class="w-5 h-5 text-blue-700" />
                  <span class="text-gray-700">Amplop Digital</span>
              </div>
              <div>
                <Icon name="mdi:success-circle-outline" class="w-5 h-5 text-blue-700" />
                  <span class="text-gray-700">Hitung Mundur Waktu Acara</span>
              </div>
              <div>
                <Icon name="mdi:success-circle-outline" class="w-5 h-5 text-blue-700" />
                  <span class="text-gray-700">Integrasi Google Maps</span>
              </div>
              <div>
                <Icon name="mdi:success-circle-outline" class="w-5 h-5 text-blue-700" />
                  <span class="text-gray-700">Revisi 3 Kali</span>
              </div>
          </div>

          <a href="https://wa.me/6281532094978?text=Hallo kak, saya buat undangan dong!">
            <button class="w-full mx-auto flex justify-center items-center px-4 py-2 mt-5 text-white text-center capitalize transition-colors duration-300 transform bg-blue-700 rounded-md hover:bg-gray-600">
              Buat Undangan
            </button>
          </a>
          
        </div>
      </div>
  </section>
</Page>
